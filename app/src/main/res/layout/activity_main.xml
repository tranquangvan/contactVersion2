<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.contactversion2.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="72dp"
            app:srcCompat="@android:drawable/btn_dialog"
            android:onClick="Back"/>

        <TextView
            android:layout_width="242dp"
            android:layout_height="100dp"
            android:layout_marginLeft="20dp"
            android:text="ADD Danhba"
            android:textSize="40dp"
            android:textColor="#AD39E3"
            />

    </LinearLayout>

    <ImageView
        android:id="@+id/View7"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        app:srcCompat="@drawable/anh1" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="242dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#6B718E"
        android:hint="Input Name" />

    <EditText
        android:id="@+id/etNumberPhone"
        android:layout_width="244dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="#6B718E"
        android:hint="Input NumberPhone:" />

    <ImageButton
        android:id="@+id/button"
        android:layout_marginTop="10dp"
        android:layout_width="70dp"
        android:layout_marginLeft="160dp"
        android:layout_height="70dp"
        android:onClick="Add"
        app:srcCompat="@android:drawable/checkbox_on_background" />

</LinearLayout>